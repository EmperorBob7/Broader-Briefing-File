{
    "compilerOptions": {
      "target": "ES6",
      "module": "ES6",
      "strict": true,
      "esModuleInterop": true,
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true,
      "outDir": "./public/",
      "allowJs": true,
      "lib": ["DOM", "ES6"],
      "incremental": true,
    },
    "include": ["public/**/*.ts", "public/**/*.d.ts"],
    "exclude": ["node_modules", "dist"]
  }  