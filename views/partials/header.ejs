<!-- Login Modal -->
<dialog id="loginModal" class="modal">
    <div class="modal-container">
        <div class="modal-box">
            <form>
                <h3>Login</h3>
                <hr />
                <label>
                    <span>Username</span>
                    <input type="text" id="usernameInput" placeholder="Username" autocomplete="username" />
                </label>
                <label>
                    <span>Password</span>
                    <input type="password" id="passwordInput" placeholder="Password" autocomplete="current-password" />
                </label>
                <button id="modalLoginButton" class="btn btn-primary">Login</button>
                <hr />
                <ul>
                    <li id="loginRule1">Username must be between 3 and 20 characters</li>
                    <li id="loginRule2">Password must be between 6 and 30 characters</li>
                    <li id="loginRule3">Username shouldn't be Profane</li>
                </ul>
            </form>
            <form method="dialog" class="modal-backdrop">
                <button class="btn btn-error">Close</button>
            </form>
        </div>
    </div>
</dialog>

<!-- Register Modal -->
<dialog id="registerModal" class="modal">
    <div class="modal-container">
        <div class="modal-box">
            <form>
                <h3>Register</h3>
                <hr />
